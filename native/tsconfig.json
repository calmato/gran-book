{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "~~/*": [
        "./*"
      ],
      "@/*": [
        "./app/*"
      ],
      "@@/*": [
        "./*"
      ],
      "tests": [
        "test/*"
      ],
    },
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "@types/react",
      "@types/react-dom",
      "@types/react-native",
      "@types/jest",
      "firebase"
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}