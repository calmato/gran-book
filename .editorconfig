# editorconfig.org
root = true

# --- common ---
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

# --- frontend ---
[*.{js,ts,jsx,tsx,vue}]
max_line_length = 120

# --- backend ---
[*.go]
max_line_length = 120
indent_style = tab
