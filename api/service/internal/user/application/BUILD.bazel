go_test(
    name = "application_test",
    srcs = ["user_test.go"],
    embed = [":application"],
    deps = [
        "//internal/user/domain/user",
        "//pkg/database",
        "//pkg/exception",
        "//pkg/test",
        "@com_github_golang_mock//gomock",
        "@com_github_stretchr_testify//require",
    ],
