{
  // "jestrunner.jestCommand": "cd ./native && yarn test --"
  "jestrunner.jestCommand": "yarn test --",

  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript"
  },

  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  }
}
